<?xml version="1.0" encoding="utf-8"?>
<com.ztostring.drawerlayout.GestureDragDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <com.ztostring.drawerlayout.GestureDragMainView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF3348">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/main_ic"/>

        </LinearLayout>

    </com.ztostring.drawerlayout.GestureDragMainView>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:fitsSystemWindows="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="侧边栏出来了~~~~~~~"
            android:textColor="@color/black" />

    </FrameLayout>
</com.ztostring.drawerlayout.GestureDragDrawerLayout>